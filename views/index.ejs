<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <section class="py-5">
        <div class="container">
            <div class="row shadow rounded-4 p-5 pt-2">
                <div class="d-flex align-items-center justify-content-between">
                    <h2 class="text-center my-5 text-uppercase">Book History</h2>
                    <div>
                        <a href="/add" class="btn btn-primary">Add</a>
                    </div>
                </div>
                <table class="table text-center">
                    <thead>
                        <tr class="table-primary">
                            <th>#</th>
                            <th>Type</th>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% books.forEach((book, index)=> { %>
                            <tr>
                                <td>
                                    <%= index+1 %>
                                </td>
                                <td>
                                    <%= book.type %>
                                </td>
                                <td>
                                    <%= book.category %>
                                </td>
                                <td>
                                    <%= book.amount %>
                                </td>
                                <td>
                                    <%= book.date %>
                                </td>
                                <td>
                                    <a href="/edit/<%=book._id%>" class="btn btn-primary">Edit</a> ||
                                    <a href="/delete/<%=book._id%>" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
            </div>
        </div>
    </section>
</body>

</html>